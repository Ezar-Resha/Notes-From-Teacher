<%- include('navbar')%>
<%- include('style')%>

    <h1 style="text-align:center;margin-top:2%">Documents for <%=docs.subjectName%></h1>
    <form action="/subjects/<%=docs.id%>/documents/upload"><button type="submit"> Add new Document </button></form>
    <table>
        <tr>
            <th> No</th>
            <th> Name </th>
            <th> Description </th>
            <th> Download Link (?) </th>
        </tr>
    

    <% docs.Documents.forEach((el, index) => { %>
        <tr>
            <td> <%=index+1%> </td>
            <td> <%=el.name%> </td>
            <td> <%=el.description%></td>
            <td> <%=el.directory%> </td>
        </tr>
    <% }) %>
</table>

        

    
</body>
</html>