<%- include('header') %>
<%- include('style')%>

<p> Create an account</p>
<form action="/register" method="POST">
    <table>
        <tr>
            <td><label for="name">Name</label></td>
        </tr>
        <tr>
            <td><input type="text" placeholder="ex: siPakGuruYangItu" name="name"></input></td>
        </tr>
        <tr>
            <td><label for="email">E-mail</label></td>
        </tr>
        <tr>
            <td><input type="text" placeholder="ex: siPakGuruYangItu" name="email"></input></td>
        </tr>
        <tr>
            <td><label for="password">Password</label></td>
        </tr>
        <tr>
            <td><input type="password"  name="password"></input></td>
        </tr>
        <tr>
            <td><label for="passwordConfirm">Confirm Password</label></td>
        </tr>
        <tr>
            <td><input type="password"  name="passwordConfirm"></input></td>
        </tr>
        <tr>
            <td><label for="role"> Role : </label></td>
            <td><select name="role">
                <option value="Teacher"> Teacher</option>
                <option value="Student"> Student</option>
            </select></td>
        </tr>
        <tr>
            <td><button type="submit"> Register!</button></td>
        </tr>
    </table>
</form>

<% if (err) { %>
    <p style="color:red;font-size:smaller"> <%=err%> </p>
<% } %>

<%- include('footer') %>
